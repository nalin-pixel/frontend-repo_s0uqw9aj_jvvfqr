{
  "template_meta": {
    "name": "Menata Hati Tour & Travel — Modular Sections",
    "brand": {
      "name": "Menata Hati Tour & Travel",
      "primary_color": "#660033",
      "accent_color": "#f1e6ec",
      "text_color": "#0f172a",
      "muted_text": "#475569",
      "font_primary": "Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, \"Apple Color Emoji\", \"Segoe UI Emoji\""
    },
    "description": "Modular Elementor-ready sections reflecting the React build (Hero 3D, Date Selector, Packages, Why Us) plus expanded tour & travel content blocks (Itinerary, Destinations, Gallery, Testimonials, Booking, FAQ, Contact).",
    "version": "1.0.0",
    "notes": "Each section below is self-contained and can be imported individually into Elementor. Map 'elementor_widget' to Elementor core/pro widgets: heading, text-editor, button, image, icon-box, gallery, testimonial, form, tabs, accordion, icon-list, star-rating, counter, video, shortcode, html."
  },
  "global_styles": {
    "container_width": 1140,
    "section_padding": { "top": 80, "bottom": 80 },
    "radius": 14,
    "shadows": {
      "card": "0 8px 24px rgba(0,0,0,0.06)",
      "soft": "0 2px 10px rgba(0,0,0,0.05)"
    },
    "buttons": {
      "primary": { "bg": "#660033", "text": "#ffffff" },
      "secondary": { "bg": "#ffffff", "text": "#660033", "border": "1px solid #660033" }
    }
  },
  "sections": [
    {
      "key": "hero_spline",
      "label": "Hero — 3D Spline + Headline",
      "elementor_widget": "section",
      "layout": { "padding_top": 0, "padding_bottom": 0, "full_width": true, "height": 560 },
      "background": {
        "type": "html",
        "html": "<div id=\"spline-hero\" style=\"position:relative;width:100%;height:560px;overflow:hidden;border-bottom-left-radius:24px;border-bottom-right-radius:24px;\"><div id=\"spline-embed\"></div><div style=\"position:absolute;inset:0;pointer-events:none;background:linear-gradient(180deg,rgba(0,0,0,0.00) 0%,rgba(0,0,0,0.35) 65%,rgba(0,0,0,0.55) 100%);\"></div></div>",
        "note": "Embed Spline using custom HTML or the Spline iframe."
      },
      "content": [
        {
          "elementor_widget": "heading",
          "text": "Menata Hati Tour & Travel",
          "tag": "h1",
          "style": { "color": "#ffffff", "size": 56, "weight": 700, "line_height": 1.1 },
          "position": { "type": "absolute", "top": 120, "left": "50%", "transform": "translateX(-50%)", "max_width": 960, "align": "center" }
        },
        {
          "elementor_widget": "text-editor",
          "text_html": "<p style=\"color:#e2e8f0;font-size:18px\">Umrah & Haji berkelas, bimbingan penuh, perjalanan yang menenangkan.</p>",
          "position": { "type": "absolute", "top": 200, "left": "50%", "transform": "translateX(-50%)", "max_width": 720, "align": "center" }
        },
        {
          "elementor_widget": "button",
          "label": "Konsultasi Gratis",
          "link": "https://wa.me/6281234567890",
          "style": { "background": "#660033", "color": "#ffffff", "padding_x": 24, "padding_y": 12, "radius": 999 },
          "position": { "type": "absolute", "top": 260, "left": "50%", "transform": "translateX(-50%)", "align": "center" }
        }
      ]
    },
    {
      "key": "date_selector",
      "label": "Departure Date Selector",
      "elementor_widget": "section",
      "layout": { "padding_top": 48, "padding_bottom": 48 },
      "content": [
        { "elementor_widget": "heading", "text": "Jadwal Keberangkatan", "tag": "h2", "style": { "size": 36, "weight": 700, "color": "#0f172a" } },
        { "elementor_widget": "text-editor", "text_html": "<p>Pilih bulan keberangkatan terbaik Anda dalam 12–14 bulan ke depan.</p>" },
        {
          "elementor_widget": "html",
          "html": "<div class=\"mh-date-grid\" style=\"display:grid;grid-template-columns:repeat(6,minmax(0,1fr));gap:12px\"></div>",
          "note": "Use HTML + JS repeater in Elementor or 6-column Inner Sections with buttons."
        },
        {
          "elementor_widget": "button",
          "label": "Lihat Paket Sesuai Tanggal",
          "link": "#packages",
          "style": { "background": "#660033", "color": "#ffffff", "radius": 999, "padding_x": 24, "padding_y": 12 }
        }
      ],
      "scripts": [
        "const container = document.querySelector('.mh-date-grid'); if(container){ const now = new Date(); for(let i=0;i<14;i++){ const d = new Date(now.getFullYear(), now.getMonth()+i, 1); const label = d.toLocaleString('id-ID',{month:'long', year:'numeric'}); const btn = document.createElement('button'); btn.textContent = label; btn.style.cssText='padding:12px 14px;border:1px solid #e5e7eb;border-radius:12px;background:#fff;cursor:pointer;font-weight:600;color:#0f172a'; btn.onmouseenter=()=>btn.style.boxShadow='0 8px 24px rgba(0,0,0,0.06)'; btn.onmouseleave=()=>btn.style.boxShadow='none'; btn.onclick=()=>{ document.querySelectorAll('.mh-date-grid button').forEach(b=>{b.style.outline='none'}); btn.style.outline='3px solid #66003340'; sessionStorage.setItem('mh_selected_month', label); }; container.appendChild(btn);} }"
      ]
    },
    {
      "key": "packages",
      "label": "Paket Rekomendasi",
      "elementor_widget": "section",
      "layout": { "padding_top": 64, "padding_bottom": 64 },
