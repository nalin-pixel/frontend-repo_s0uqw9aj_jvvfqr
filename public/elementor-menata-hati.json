        {
          "elementor_widget": "form",
          "fields": [
            { "type": "text", "label": "Nama Lengkap", "name": "full_name", "required": true },
            { "type": "tel", "label": "Nomor WA", "name": "whatsapp", "required": true },
            { "type": "email", "label": "Email", "name": "email" },
            { "type": "select", "label": "Paket", "name": "package", "options": ["Umrah Reguler", "Umrah Premium", "Haji Plus"], "required": true },
            { "type": "text", "label": "Bulan Keberangkatan", "name": "departure_month", "placeholder": "Otomatis terisi dari pilihan tanggal" },
            { "type": "textarea", "label": "Catatan", "name": "notes" }
          ],
          "submit": { "label": "Kirim", "action": "email", "to": "cs@menatahatitravel.id" },
          "after_submit": {
            "js": "try{const m=sessionStorage.getItem('mh_selected_month');if(m){const el=document.querySelector('[name=\\"form_fields[departure_month]\\"]'); if(el){el.value=m;}}}catch(e){}"
